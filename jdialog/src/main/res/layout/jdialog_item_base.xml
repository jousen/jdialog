<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jdialog_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/jdialog_card_style"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/jdialog_list_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:contentDescription="@string/jdialog_list" />

    <TextView
        android:id="@+id/jdialog_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:textColor="@color/jdialog_text"
        android:textSize="14sp" />
</LinearLayout>